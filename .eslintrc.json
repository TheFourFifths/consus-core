{
    "rules": {
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "indent": [
            2,
            4
        ],
        "no-console": [
            2
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
